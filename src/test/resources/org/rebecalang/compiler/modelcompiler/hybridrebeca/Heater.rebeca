physicalclass HeaterWithSensor(3) {
	knownrebecs {
		Controller controller;
	}
	statevars {
		@Real float tempr;
		@Real float timer;
	}

	HeaterWithSensor(float tempr_){
		tempr = tempr_;
		setMode(On);
	}
	msgsrv apply(int tempe)
    	{
    		int x = tempe;
    	}
    msgsrv applyBool(boolean tempe)
        	{
        		boolean x = tempe;
        	}

	mode On{
		inv(timer<=0.05){
			timer' = 1;
			tempr' = 0.1f;
		}
		guard(timer==0.05){
			timer = 0;
			//controller.control(tempr);
		}
	}

	mode Off{
		inv(timer<=0.05){
			timer' = 1;
			tempr' = -0.1f;
		}
		guard(timer==0.05){
			timer = 0;
			//controller.control(tempr);
		}
	}
}

